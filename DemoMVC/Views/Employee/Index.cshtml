@model IEnumerable<DemoMVC.Models.Employee>

<h2>Employee List</h2>

<p><a asp-action="Create">+ Add New</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Person ID</th>
            <th>Full Name</th>
            <th>Address</th>
            <th>Age</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EmployeeId</td>
            <td>@item.PersonId</td>
            <td>@item.FullName</td>
            <td>@item.Address</td>
            <td>@item.Age</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
